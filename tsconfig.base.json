{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@radvil/api/auth": ["libs/api/auth/src/index.ts"],
      "@radvil/api/response": ["libs/api/response/src/index.ts"],
      "@radvil/api/user": ["libs/api/user/src/index.ts"],
      "@radvil/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@radvil/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@radvil/web/auth": ["libs/web/auth/src/index.ts"],
      "@radvil/web/chat-room": ["libs/web/chat-room/src/index.ts"],
      "@radvil/web/config": ["libs/web/config/src/index.ts"],
      "@radvil/web/core": ["libs/web/core/src/index.ts"],
      "@radvil/web/layout/container": [
        "libs/web/layout/container/src/index.ts"
      ],
      "@radvil/web/layout/main-view": ["libs/web/layout/main-view/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
